@model Hana.Models.ViewModels.VM_ChangePassword

@{
    int messageCode = ViewBag.MessageCode == null ? -1 : Convert.ToInt32(ViewBag.MessageCode);
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Đổi mật khẩu</h5>
                </div>
                <div class="ibox-content">
                    <form asp-action="UpdatePassword" method="post">
                        <input type="hidden" asp-for="Id" />
                        @if (messageCode < 0 && ViewBag.Message != null)
                        {
                            <div class="text-danger">@ViewBag.Message</div>
                        }
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Mật khẩu cũ</label>
                            <div class="col-lg-9">
                                <input type="password" class="form-control" asp-for="OldPassword" required>
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                                @if (messageCode == 0)
                                {
                                    <div class="text-danger">@ViewBag.Message</div>
                                }
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Mật khẩu mới</label>
                            <div class="col-lg-9">
                                <input type="password" class="form-control" asp-for="NewPassword" required>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Xác nhận mật khẩu</label>
                            <div class="col-lg-9">
                                <input type="password" class="form-control" asp-for="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3"></div>
                            <div class="col-6">
                                <button class="btn btn-yellow text-center" type="submit">Đổi mật khẩu</button>
                            </div>
                            <div class="col-3"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>