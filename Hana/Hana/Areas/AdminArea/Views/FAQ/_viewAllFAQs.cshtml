@model IEnumerable<Hana.Models.DataModels.Faq>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Basic Table</h5>
                </div>
                <div class="ibox-content">
                    <div class="row mb-2 ml-0">
                        <a onclick="showInPopup('@Url.Action("CreateOrEdit","FAQ",new { id = 0 },Context.Request.Scheme)','New FAQ')" class="btn btn-yellow col-lg-1 mr-2 text-white">Thêm mới</a>
                        @*<input type="search" class="form-control col-lg-4" placeholder="search" />*@
                    </div>

                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Câu hỏi
                                </th>
                                <th>
                                    Trả lời
                                </th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Question
                                    </td>
                                    <td>@item.Answer</td>
                                    <td class="text-center">
                                        <a onclick="showInPopup('@Url.Action("CreateOrEdit","FAQ",new {id=item.Id},Context.Request.Scheme)','Update FAQ')" class="btn btn-blue btn-circle text-white"><i class="fas fa-pen"></i></a>

                                        <form asp-area="AdminArea" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                                            <button class="btn btn-danger btn-circle" type="submit">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>