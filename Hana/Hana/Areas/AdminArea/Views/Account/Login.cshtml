
@{
    Layout = null;
}
@model Hana.Models.ViewModels.VM_Login

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Đăng nhập</title>
    <link rel=icon href=~/assets/img/icon.png sizes="20x20" type="image/png">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/css/awesome-bootstrap-checkbox.css" rel="stylesheet" />
    <link href="~/admin/css/animate.css" rel="stylesheet">
    <link href="~/admin/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div class="pb-2">
                @*<h1 class="logo-name">AN+</h1>*@
                <img width="200" height="200" src="~/assets/img/logo6.png" />
            </div>

            <h3>Đăng nhập để tiếp tục</h3>
            <p class="text-warning">@ViewBag.Message</p>
            <form class="m-t" asp-action="Login" method="post" asp-route-returnurl="@Model.ReturnUrl">
                <div class="form-group mt-2">
                    <input type="text" class="form-control rounded border-warning" asp-for="LoginName" placeholder="Tài khoản" required="">
                    <span asp-validation-for="LoginName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input type="password" class="form-control rounded border-warning" asp-for="Password" placeholder="Mật khẩu" required="">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-yellow block full-width m-b mt-2">Đăng nhập</button>
                <div class="checkbox checkbox-info d-flex align-items-center">
                    <input id="is-remember-me" asp-for="IsRememberMe" class="styled"
                           type="checkbox">
                    <label for="is-remember-me">
                        Ghi nhớ đăng nhập
                    </label>
                </div>
                @*<a href="#"><small>Quên mật khẩu?</small></a>*@
                <p class="text-muted text-center"><small>Bạn chưa có tài khoản?</small></p>
                <a class="btn btn-sm btn-white btn-block" asp-area="AdminArea" asp-controller="Account" asp-action="Register">Tạo tài khoản</a>
            </form>
        </div>
        @if (ViewBag.RegisterMessage != null)
        {
            <div id="register-message" class="register-success-message text-center">@ViewBag.RegisterMessage</div>
        }
    </div>

    <!-- Mainly scripts -->
    <script src="~/admin/js/jquery-3.7.1.min.js"></script>
    <script src="~/admin/js/popper.min.js"></script>
    <script src="~/admin/js/bootstrap.js"></script>
    <script src="~/admin/js/services/hana.js"></script>
</body>

</html>
